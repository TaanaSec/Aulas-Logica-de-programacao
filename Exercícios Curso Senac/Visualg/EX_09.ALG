Algoritmo "EX_09"


Var

salario, salarioFinal: real

Inicio

escreva("Digite seu salario: ")
leia (salario)
se (salario < 2000) então
   salarioFinal <- salario + (salario * 0.2)
   escreva("voce teve um aumento de: ", salarioFinal, " reais")
senão
     salariofinal <- salario + (salario * 0.1)
     escreva("voce teve um aumento de: ", salarioFinal, " reais")

fimse


Fimalgoritmo

